@model SingularitybdWeb.Models.AddMenuModel

@{
    ViewData["Title"] = "ViewMenus";
}

<h1>ViewMenus</h1>

<h4>MenuViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMenu" asp-controller="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentMenuId" class="control-label"></label>
                <select asp-for="ParentMenuId" >
                    <option value="" selected>Parent Itself </option>
                    @foreach(var items in Model.ParentMenus)
                        {
                        <option value="@items.Id">@items.Name</option>
                        }

                </select>
                <span asp-validation-for="ParentMenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControllerName" class="control-label"></label>
                <input asp-for="ControllerName" class="form-control" />
                <span asp-validation-for="ControllerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionName" class="control-label"></label>
                <input asp-for="ActionName" class="form-control" />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsExternal" /> @Html.DisplayNameFor(model => model.IsExternal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ExternalUrl" class="control-label"></label>
                <input asp-for="ExternalUrl" class="form-control" />
                <span asp-validation-for="ExternalUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Permitted" /> @Html.DisplayNameFor(model => model.Permitted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visible" /> @Html.DisplayNameFor(model => model.Visible)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewMenu">Back to List</a>
</div>

